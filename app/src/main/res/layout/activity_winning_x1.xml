<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context="edu.cnm.bootcamp.natedaag.winning.activities.WinningX1Activity"
    tools:layout_editor_absoluteY="80dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="126dp"
        android:layout_height="68dp"
        android:textSize="16dp"
        android:textColor="@color/colorPickviewDark"
        android:text="🍀 Clear   Picks  🍀"
        android:background="@drawable/gold_rectangle"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="12dp" />



    <Button
        android:id="@+id/buttonX1"
        android:layout_width="126dp"
        android:layout_height="68dp"
        android:textSize="16dp"
        android:textColor="@color/colorPickviewDark"
        android:text="🍀 More Jackpots 🍀"
        android:background="@drawable/gold_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />

    <ListView
        android:id="@+id/listView2"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_marginEnd="21dp"
        android:layout_marginStart="21dp"
        android:background="#f5f5f5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonX1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />


</android.support.constraint.ConstraintLayout>
